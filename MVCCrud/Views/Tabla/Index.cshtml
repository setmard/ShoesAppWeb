@model List<MVCCrud.Models.ViewModels.ListTablaViewModel>
@{
    ViewBag.Title = "Products";
}

<h2>Productos</h2>


    <div class="row" style="text-align:right;padding:5px;">
        <a href="~/Tabla/Nuevo" class="btn btn-primary">Nuevo</a>
    </div>

@using (Html.BeginForm()){
    <div class="text-left form-inline">
        
   <div class="form-group">
       <p> @Html.TextBox("searchString", null, new { placeholder = "Search Product Name" })
       
       <input type="submit" value="Buscar" class="btn btn-sm"></p>
       
  </div>
       
    </div>
}
    


<div class="row">
    <div class="col-md-12">
        <table  class="table" >
            
                <tr>
                    <th>#</th>
                    <th>IdType</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Observations</th>
                    <th>PriceDistribution</th>
                    <th>PriceClient</th>
                    <th>PriceMember</th>
                    <th>IsEnabled</th>
                    <th>Keywords</th>
                    <th>DateUpdate</th>
                    <th></th>
                    <th></th>
                </tr>
            
            
                @foreach (var oElemento in Model)
                {
                  <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.IdType</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.Description</td>
                    <td>@oElemento.Observations</td>
                    <td>@oElemento.PriceDistributor</td>
                    <td>@oElemento.PriceClient</td>
                    <td>@oElemento.PriceMember</td>
                    <td>@oElemento.IsEnabled</td>
                    <td>@oElemento.Keywords</td>
                    <td>@oElemento.DateUpdate</td>
                    <td>
                        <a class="btn btn-default" href="~/Tabla/Editar/@oElemento.Id">Editar</a>
                        <a class="btn btn-danger" href="~/Tabla/Eliminar/@oElemento.Id">Eliminar</a>
                    </td>
                  </tr>

                 }
            
        </table>
    </div>

</div>

